{
    "name": "YiiMine",
    "description": "YiiMine - Project management PHP application",
    "keywords": ["yiimine", "project management", "yii2"],
    "homepage": "http://yiimine.by-dev.com/",
    "type": "project",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=7.0",
        "yiisoft/yii2": "2.0.*",
        "yiisoft/yii2-bootstrap": "2.0.*",
        "yiisoft/yii2-swiftmailer": "2.0.*",
        "yiisoft/yii2-imagine": "2.0.*",
        "vova07/yii2-imperavi-widget": "1.2.*",
        "yiisoft/yii2-jui": "2.0.*",
        "kartik-v/yii2-grid": "*",
        "kartik-v/yii2-mpdf": "@dev",
        "kartik-v/yii2-editable": "*",
        "kartik-v/yii2-widget-datepicker": "@dev",
        "fortawesome/font-awesome": "4.*",
        "kartik-v/yii2-widget-select2": "2.0.3",
        "bower-asset/vue": "^v2.3.4",
        "bower-asset/vue-resource": "1.3.4"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "yiisoft/yii2-faker": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "runtime": "0777",
                    "web/assets": "0777",
                    "yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "config/web.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
